<p id="notice"><%= notice %></p>

<h1>Desculpas para n√£o sair</h1>
<div data-toggle="tooltip"  title="Cadastrar desculpa">
  <%= link_to '+ Desculpa', new_admin_apologize_path, class:"btn btn-primary pull-right btn-sm" %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Desculpa</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apologizes.each do |apologize| %>
      <tr>
        <td><%= image_tag(apologize.apologize_image, size:"90x90") %></td>
        <td><%= apologize.description %></td>
        <td><%= apologize.author.try(:name) %></td>
          <td>
            <div class="btn-group" role="group" aria-label="...">
              <%= link_to 'Show', [:admin,apologize], class:"btn btn-info btn-xs" %>
              <%= link_to 'Edit', edit_admin_apologize_path(apologize), class:"btn btn-info btn-xs" %>
              <%= link_to 'Destroy', [:admin,apologize], method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %>
              </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

